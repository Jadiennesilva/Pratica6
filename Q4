#include <stdio.h>
#include <locale.h>
#include <stdlib.h>

int main(){
    setlocale (LC_ALL, "portuguese_Brazil");
    
 float vet [10];
    float aux;
    
    
    for (int x = 0; x < 10; x++){
        printf ("Digite um nÃºmero: ");
        scanf ("%f", &vet[x]);
    }
    
    for (int i = 0; i < 10; i++){
        for (int ii = i; ii < 10; ii++){
            if (vet[i] > vet[ii]){
                aux = vet[i];
                vet[i] = vet[ii];
                vet[ii] = aux;
            }
        }
        printf ("%.2f  ", vet[i]);
    }

    system("pause");
    return 0;
}
