#include <stdio.h>
#include <locale.h>
#include <stdlib.h>

int main(){
    setlocale (LC_ALL, "portuguese_Brazil");
    
  int vet[10];
    
    
    for (int i = 0; i < 10; i++){
		printf ("Digite o %dª número: ", i);
		scanf ("%d", &vet [i]);
    }
    
    printf ("Números pares\n: ");
    
    for(int x = 0; x < 10; x++){
        if (x % 2 == 0){
            printf("%d ", vet[x]);
        }
    }

    system("pause");
    return 0;
}
